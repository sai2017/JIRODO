<%= form_for([review,comment], remote: true) do |f| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= comment.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :review_id %>
  <div class="well">
    <div class="field">
      <%= f.text_field :content, placeholder: "コメントする...", class: "form-control"  %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit '投稿', class: 'btn btn-default btn-sm btn-primary'%>
  </div>
<% end %>
