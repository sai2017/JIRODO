<ul>
  <% comments.each do |comment| %>
    <% unless comment.id.nil? %>
     <div class="alert alert-warning alert-dismissible" role="alert">
      <li>
        <p class="left"><b><%= profile_img(comment.user) %><%= comment.user.name %></b></p>
        <div class="well">
          <p class="left"><%= comment.content %></p>
        </div>
        <% if current_user.id == comment.user.id %>
          <p class="right">
            <%= link_to '', edit_review_comment_path(review, comment), class: "fa fa-pencil-square-o fa-lg" %>
            <%= link_to '', review_comment_path(review, comment), class: "fa fa-trash-o fa-lg", method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
          </p>
        <% end %>
      </li>
     </div>
    <% end %>
  <% end %>
</ul>
