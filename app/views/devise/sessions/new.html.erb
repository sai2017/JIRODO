<body class="container-fluid">
    <div class="row">
		<div class="col-md-4 col-md-offset-4">
    <%= alert %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
			<div class="box">
				<div class="input-group">
					<span class="input-group-addon addon-facebook">
						<i class="fa fa-fw fa-2x fa-facebook fa-fw"></i>
					</span>
					<a class="btn btn-lg btn-block btn-facebook" href="/users/auth/facebook"> Facebookでログイン</a>
				</div>

				<div class="input-group">
					<span class="input-group-addon addon-twitter">
						<i class="fa fa-fw fa-2x fa-twitter fa-fw"></i>
					</span>
					<a class="btn btn-lg btn-block btn-twitter" href="/users/auth/twitter"> Twitterでログイン</a>
				</div>

				<form role="form">

					<div class="divider-form"></div>

					<div class="form-group">
            <label for="exampleInputPassword1">Email</label>
						<%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
					</div>

					<div class="divider-form"></div>

					<div class="form-group">
						<label for="exampleInputPassword1">Password</label>
						<%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
					</div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :内容を記憶させる %>
            </div>
          <% end %>

					<div class="divider-form"></div>

					<button type="submit" class="btn-block btn btn-lg btn-primary">ログイン</button>

				</form>
			</div>
    <% end %>
		</div>
	</div>
</body>
