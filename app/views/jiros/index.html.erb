<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1 class="page-header">店舗一覧</h1>
          <!-- Blog Post -->
      <div class="card mb-4">
        <% @jiros.each do |jiro| %>
        <div class="panel panel-warning">
         <div class="panel-heading">
          <div class="row">
            <div class="index-house-body">
              <div class="index-house-body-left col-xs-12 col-md-6">
                      <%= image_tag(jiro.image) %>
              </div>
              <div class="index-house-body-right  col-xs-12 col-md-6">
                    <div class="index-house-text">
                      <h3><%= jiro.shop_name %></h3>
                      <p><%= link_to "詳細", jiro_path(jiro.id), class: 'btn btn-default btn-sm btn-success' %></p>

                      <td><%= render partial: 'favorites/favorites', locals: { jiro: jiro } %><td>

                    </div>
              </div>
            </div>
          </div>
         </div>
        </div>
        <% end %>
        <%= paginate @jiros %>
      </div>

          <!-- Pagination -->

    </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

          <!-- Search Widget -->
          <div class="card my-4">
            <h1 class="page-header">店舗検索</h1>
            <div class="card-body">
              <div class="input-group">
                <%= search_form_for(@q, url: jiros_path, class: 'well') do |f| %>
                  <%= f.label :shop_name_cont, '店舗名' %>
                  <%= f.text_field :shop_name_cont, class: "form-control", placeholder: '店名' %>
                <div>
                </br></br></br>
                  <%= f.submit '検索する', class: 'btn btn-primary' %>
                </div>
                <% end %>
              </div>
            </div>
          </div>

        </div>
      <!-- /.row -->
  </div>
</div>
    <!-- /.container -->
