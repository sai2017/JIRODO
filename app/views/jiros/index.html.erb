    <div class="container">

      <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-8">

          <h1 class="my-4">店舗一覧
          </h1>

          <!-- Blog Post -->
          <div class="card mb-4">
            <% @jiros.each do |jiro| %>
            <div class="well">
            <img class="card-img-top"><%= image_tag(jiro.image) %><alt="Card image cap">
            <div class="card-body">
              <h2 class="card-title"><%= jiro.shop_name %></h2>


              <%= link_to "詳細", jiro_path(jiro.id), class: 'btn btn-primary btn-block' %>
            </div>
            <div class="card-footer text-muted">
              Posted on January 1, 2017 by
              <a href="#">Start Bootstrap</a>
            </div>
            </div>
            <% end %>
          </div>

          <!-- Pagination -->
          <ul class="pagination justify-content-center mb-4">
            <li class="page-item">
              <a class="page-link" href="#">&larr; Older</a>
            </li>
            <li class="page-item disabled">
              <a class="page-link" href="#">Newer &rarr;</a>
            </li>
          </ul>

        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

          <!-- Search Widget -->
          <div class="card my-4">
            <h4 class="card-header">店舗検索</h4>
            <div class="card-body">
              <div class="input-group">
                <%= search_form_for(@q, url: jiros_path, class: 'well') do |f| %>
                  <%= f.label :shop_name_cont, '店舗名' %>
                  <%= f.text_field :shop_name_cont, class: "form-control" %>
                <div>
                </br></br></br>
                  <%= f.submit '検索する', class: 'btn btn-primary' %>
                </div>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Categories Widget -->
          <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
              <div class="row">
                <div class="col-lg-6">
                  <ul class="list-unstyled mb-0">
                    <li>
                      <a href="#">Web Design</a>
                    </li>
                    <li>
                      <a href="#">HTML</a>
                    </li>
                    <li>
                      <a href="#">Freebies</a>
                    </li>
                  </ul>
                </div>
                <div class="col-lg-6">
                  <ul class="list-unstyled mb-0">
                    <li>
                      <a href="#">JavaScript</a>
                    </li>
                    <li>
                      <a href="#">CSS</a>
                    </li>
                    <li>
                      <a href="#">Tutorials</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <!-- Side Widget -->
          <div class="card my-4">
            <h5 class="card-header">Side Widget</h5>
            <div class="card-body">
              You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
            </div>
          </div>

        </div>

      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->
