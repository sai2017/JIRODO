<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
        <h2>お問い合わせフォーム</h2>
<%= form_for(@contact, url: choose_new_or_edit) do |f| %>
<table width="37%" border="0">
            <div class="well well-sm">
                <form>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="name">
                                お名前</label>
                            <%= f.text_field :name, class: 'form-control', placeholder: "お名前",id: "name", required: "required" %>
                        </div>
                        <div class="form-group">
                            <label for="email">
                                メールアドレス</label>
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span>
                                </span>
                                <%= f.text_field :email, class: 'form-control', placeholder: "メールアドレス",id: "email", required: "required" %>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="content">
                                お問い合わせ内容</label>
                            <%= f.text_area :content, class: 'form-control', placeholder: "お問い合わせ内容",id: "content", required: "required",rows: "9", cols: "25" %>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <%= f.submit '送信', class: 'btn btn-primary pull-right',id: "submit" %>
                    </div>
                </div>
                </form>
            </div>
<% end %>
        </div>
