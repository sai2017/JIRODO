<!DOCTYPE html>
<html>
<head>
  <title>JIRODO</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBj7LerYhDZortZqhGrSTm19UiJLCdVdbY"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<div class="container">
    <div class="content">
      <header style="height:10px;"></header>
      <!------------- Navbar -------------->
      <nav class="navbar navbar-inverse bs-dark">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">JIRODO</a>
          </div>

          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class=><%= link_to "トップ", root_path %><span class="sr-only">(current)</span></li>
              <li class><%= link_to "店舗一覧", jiros_path %><span class="sr-only"></span></li>
              <li class><%= link_to "マップ", map_index_path %><span class="sr-only"></span></li>
              <% if user_signed_in? %>
                <li class><%= link_to 'マイ二郎', favorites_path %><span class="sr-only"></span></li>
              <% end %>
              <li class><%= link_to "お問い合わせ", new_contact_path %><span class="sr-only"></span></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle navbar-img" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <%= current_user.name %>
                <%= profile_img(current_user) %>
                </a>
                <ul class="dropdown-menu">
                  <li class><%= link_to 'マイページ', edit_user_registration_path %><span class="sr-only"></span></li>
                  <li role="separator" class="divider"></li>
                  <li class><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %><span class="sr-only"></span></li>
                </ul>
              </li>
            <% else %>
              <li class><%= link_to 'ログイン', new_user_session_path  %><span class="sr-only"></span></li>
              <li class><%= link_to '新規登録', new_user_registration_path  %><span class="sr-only"></span></li>
            <% end %>
            </ul>
          </div>
      </nav>

<%= yield %>
    </div>

  <footer>
	<div class="row">
		<legend></legend>
        <p>© 2017 Copyright JIRODO. All Rights Reserved. </p>
	</div>
  </footer>
</div>

</body>
</html>
