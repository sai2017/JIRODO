
<div class="container">
  <div class="row">
    <div class="col-md-8">
    <div class="card mb-4">
      <h2>マイ二郎</h2>

      <% current_user.favorite_jiros.each do |jiro| %>
      <div class="panel panel-warning">
       <div class="panel-heading">
        <div class="row">
          <div class="index-house-body">
            <div class="index-house-body-left col-xs-12 col-md-6">
                    <%= image_tag(jiro.image) %>
            </div>
            <div class="index-house-body-right  col-xs-12 col-md-6">
                  <div class="index-house-text">
                    <h3><%= jiro.shop_name %></h3>
                    <p><%= link_to "詳細", jiro_path(jiro), class: 'btn btn-default btn-sm btn-success' %></p>

                    <td><%= render partial: 'favorites/favorites', locals: { jiro: jiro } %><td>

                  </div>
            </div>
          </div>
        </div>
       </div>
      </div>
      <% end %>

    </div>
    </div>
  </div>
</div>
