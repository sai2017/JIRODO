<ul>
  <% reviews.each do |review| %>
    <% unless review.id.nil? %>
      <li>

        <p class="left"><%= review.content %></p>
        <% if current_user.id == review.user.id %>
          <p class="right">
            <%= link_to '', edit_jiro_review_path(jiro, review), class: "fa fa-pencil-square-o fa-lg" %>
            <%= link_to '', jiro_review_path(jiro, review), class: "fa fa-trash-o fa-lg", method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
          </p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
